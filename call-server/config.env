# SecureVox Call Server Configuration

# Server Settings
PORT=8002
NODE_ENV=development
HOST=0.0.0.0

# Security
JWT_SECRET=your-jwt-secret-key-change-in-production
API_SECRET=your-api-secret-for-internal-communication

# Main Server Integration
MAIN_SERVER_URL=http://localhost:8000
MAIN_SERVER_API_KEY=your-main-server-api-key

# Notification Server Integration
NOTIFY_SERVER_URL=http://localhost:8002
NOTIFY_SERVER_API_KEY=your-notify-server-api-key

# WebRTC Settings
STUN_SERVERS=stun:stun.l.google.com:19302,stun:stun1.l.google.com:19302
TURN_SERVER_URL=turn:localhost:3478
TURN_USERNAME=securevox
TURN_PASSWORD=changeme
TURN_REALM=securevox

# Redis (for session management)
REDIS_URL=redis://localhost:6379
REDIS_PREFIX=securevox:call:

# Logging
LOG_LEVEL=info
LOG_FILE=logs/call-server.log

# Rate Limiting
MAX_CALLS_PER_USER=10
RATE_LIMIT_WINDOW_MS=60000
MAX_REQUESTS_PER_WINDOW=100
